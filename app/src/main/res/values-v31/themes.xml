<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 12+ with Splash Screen API -->
    <style name="Theme.NeoSynth_android" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Splash Screen background color (color de acento púrpura) -->
        <item name="android:windowSplashScreenBackground">#6750A4</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor">#6750A4</item>
        <!-- Duración del splash screen -->
        <item name="android:windowSplashScreenAnimationDuration">300</item>
    </style>
</resources>
